{
  "eslint.workingDirectories": [
    {
      "directory": "backend",
      "changeProcessCWD": true,
      "pattern": "backend"
    },
    { 
      "directory": "front-office",
      "changeProcessCWD": true,
      "pattern": "front-office"
    },
    { "pattern": "back-office" }
  ],
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  "cSpell.words": ["hono", "inversify", "openapi"],
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  }
}